{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Instance",
  "type": "object",
  "properties": {
    "name": {
      "description": "The unique name of an instance",
      "type": "string"
    },
    "description": {
      "description": "The description of an instance",
      "type": "string"
    },
    "checkpointMode": {
      "description": "A mode of checkpoint",
      "type": "string"
    },
    "checkpointInterval": {
      "description": "An interval of checkpoint",
      "type": "number"
    },
    "options": {
      "description": "The set of some optional parameters",
      "type": "object"
    },
    "perTaskCores": {
      "description": "Number of cores that will be dedicated for a task of instance",
      "type": "number"
    },
    "perTaskRam": {
      "description": "Size of ram that will be dedicated for a task of instance",
      "type": "number"
    },
    "jvmOptions": {
      "description": "The set of jvm parameters",
      "type": "object"
    },
    "nodeAttributes": {
      "description": "The set of mesos parameters",
      "type": "object"
    },
    "coordinationService": {
      "description": "A zookeeper service for a leader latch",
      "type": "string"
    },
    "environmentVariables": {
      "description": "The set of environment variables",
      "type": "object"
    },
    "performanceReportingInterval": {
      "description": "How often a report of instance work performance will be",
      "type": "number"
    },
    "outputs": {
      "description": "The set of outputs",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "duplicateCheck": {
      "type": "boolean"
    },
    "lookupHistory": {
      "type": "number"
    },
    "queueMaxSize": {
      "type": "number"
    },
    "defaultEvictionPolicy": {
      "type": "string"
    },
    "evictionPolicy": {
      "type": "string"
    },
    "backupCount": {
      "type": "number"
    },
    "asyncBackupCount": {
      "type": "number"
    },
    "inputs": {
      "description": "The set of inputs",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "stateManagement": {
      "type": "string"
    },
    "stateFullCheckpoint": {
      "type": "number"
    },
    "eventWaitIdleTime": {
      "type": "number"
    },
    "window": {
      "type": "number"
    },
    "slidingInterval": {
      "type": "number"
    },
    "mainStream": {
      "type": "string"
    },
    "relatedStreams": {
      "description": "The set of streams that are related",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "batchFillType": {
      "type": "object",
      "properties": {
        "typeName": {
          "type": "string"
        },
        "value": {
          "type": "number"
        }
      }
    },
    "input": {
      "type": "string"
    },
    "output": {
      "type": "string"
    }
  }
}