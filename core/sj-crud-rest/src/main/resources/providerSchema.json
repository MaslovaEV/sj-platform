{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Provider",
  "type": "object",
  "properties": {
    "name": {
      "description": "The unique name of a provider",
      "type": "string"
    },
    "description": {
      "description": "The description of a provider",
      "type": "string"
    },
    "type": {
      "description": "The provider type",
      "type": "string"
    },
    "login": {
      "description": "The provider login",
      "type": "string"
    },
    "password": {
      "description": "The provider password",
      "type": "string"
    },
    "hosts": {
      "description": "The provider hosts",
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}